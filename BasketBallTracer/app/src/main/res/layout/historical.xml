<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink_red">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonRetour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:onClick="redirectMain"
                android:text="@string/retour" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:text="@string/historical"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>
        <TableLayout
            android:id="@+id/tableHistorique"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TableRow>

                <TextView
                    android:id="@+id/nomEquipe1"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/equipe1"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/nomEquipe2"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/equipe2"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/dateMatch"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/date"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/scoreFinal"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/score"
                    android:textSize="20sp" />
            </TableRow>

        </TableLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/liste"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>